<h1>Request a Loan Adjustment</h1>

<%= form_with(url: loan_adjustment_index_path(id: @loan.id), method: :post, local: true) do |f| %>
  <div>
    <%= f.label :adjusted_amount, 'Adjusted Amount', class: 'block text-gray-700' %>
    <%= f.number_field :adjusted_amount, step: 0.01, class: 'form-control w-full p-2 border border-gray-300 rounded' %>
  </div>

  <div>
    <%= f.label :adjusted_interest_rate, 'Adjusted Interest Rate', class: 'block text-gray-700' %>
    <%= f.number_field :adjusted_interest_rate, step: 0.01, class: 'form-control w-full p-2 border border-gray-300 rounded' %>
  </div>

  <div class="mt-4">
    <%= f.submit 'Submit Adjustment Request', class: 'btn btn-success bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>
<% end %>

<%= link_to 'Back to Loan', loan_path(@loan), class: 'btn btn-secondary bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>

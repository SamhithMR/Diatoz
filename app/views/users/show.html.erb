<div class="max-w-4xl mx-auto p-6 bg-white shadow rounded-lg">
  <h1 class="text-2xl font-bold mb-4">User Profile</h1>
  <div class="mb-4">
    <p><span class="font-semibold">Name:</span> <%= @user.name %></p>
    <p><span class="font-semibold">Email:</span> <%= @user.email %></p>
    <p><span class="font-semibold">Role:</span> <%= @user.role.capitalize %></p>
  </div>

  <h2 class="text-xl font-bold mt-6 mb-4">Wallet</h2>
  <p class="mb-4"><span class="font-semibold">Balance:</span> <%= number_to_currency(@user&.wallet&.balance || 0) %></p>

  <%= link_to 'Edit Profile', edit_user_registration_path, class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
</div>

<div class="max-w-3xl mx-auto p-6 bg-white shadow rounded-lg">
  <h1 class="text-2xl font-bold mb-6">Edit Profile</h1>
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= f.submit 'Save Changes', class: 'px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600' %>
      <%= link_to 'Cancel', user_path(@user), class: 'px-4 py-2 ml-2 bg-gray-500 text-white rounded hover:bg-gray-600' %>
    </div>
  <% end %>
</div>

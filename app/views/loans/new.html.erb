<div class="max-w-3xl mx-auto p-6 bg-white shadow rounded-lg">
  <h1 class="text-2xl font-bold mb-6">Request a Loan</h1>
  <%= form_with(model: @loan, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :amount, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :amount, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :interest_rate, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :interest_rate, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= f.submit 'Submit Loan Request', class: 'px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600' %>
    </div>
  <% end %>
</div>

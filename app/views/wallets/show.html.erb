<div class="max-w-4xl mx-auto p-6 bg-white shadow rounded-lg">
  <h1 class="text-2xl font-bold mb-4">Wallet Details</h1>
  <div class="mb-4">
    <p><span class="font-semibold">User:</span> <%= @user.name %></p>
    <p><span class="font-semibold">Balance:</span> <%= number_to_currency(@wallet.balance || 0) %></p>
  </div>
  <%= link_to 'Back to Profile', user_path(@user), class: 'px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600' %>
</div>
